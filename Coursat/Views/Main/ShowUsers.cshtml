    <link rel="stylesheet" href="../assets/css/Navigation-with-Search.css">
    <link rel="stylesheet" href="../assets/css/Registration-Form-with-Photo-1.css">
    <link rel="stylesheet" href="../assets/css/Registration-Form-with-Photo.css">
    <link rel="stylesheet" href="../assets/css/Simple-Slider.css">
    <link rel="stylesheet" href="../assets/css/styles.css">
    <link rel="stylesheet" href="../assets/css/Team-Clean.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-light navbar-expand-md fixed-top" style="color:rgb(110,131,152);background-color:#000000;">
        <div class="container-fluid">
            <a class="navbar-brand text-monospace" href="#" id="COURSAT" style="font-size:25px;font-family:Actor, sans-serif;color:#6495ed;">Admin Dashboard</a><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1" style="background-color:#ffffff;"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item" role="presentation"><a class="nav-link active" href="#" style="color:rgba(255,255,255,0.93);font-family:Actor, sans-serif;"></a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="#" style="color:rgba(255,255,255,0.83);"></a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="#" style="color:rgba(255,255,255,0.84);"></a></li>
                </ul><button class="btn btn-primary" type="button" data-bs-hover-animate="pulse" id="HEADER_BT_LOGOUT" onclick="location.href='@Url.Action("AdminLogin","Main")'" style="margin:7px;">Logout</button>
            </div>
        </div>
    </nav>
    <div class="flex-grow-1 visible highlight-blue" style="width:185px;height:791px;max-height:1080px;min-height:0px;min-width:185px;max-width:185px;background-color:#1e2833;position:fixed;/*top:0;*//*right:0;*//*left:0;*//*z-index:1030;*/margin-top:-92px;">
        <a class="btn btn-primary" role="button" href="@Url.Action("AddAdmin","Main")" id="Left-Buttons" style="width:185px;height:40px;margin-top:23px;background-color:#1e2833;margin-right:0px;">Add Admin<img class="float-left" src="../assets/img/add-user.png" style="width:26px;margin-right:-30px;"></a>
        <img src="../assets/img/undraw_dashboard_nklg.png" style="width:600px;min-width:0px;margin-left:746px;margin-top:35px;">
        <p class="text-center" id="Copyright" style="margin-bottom:-71px;margin-top:127px;margin-left:-12px;"><br>Coursat © 2020<br><br></p>
        <p class="text-monospace" style="margin-left:206px;margin-top:-554px;width:320px;font-size:21px;color:#1e2833;line-height:47px;font-family:Cairo, sans-serif;">&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;</p>
        <a class="btn btn-primary" role="button" href="@Url.Action("AddCourse","Main")" id="Left-Buttons" style="width:185px;height:40px;margin-top:-235px;background-color:#1e2833;">Add Course<img class="float-left" src="../assets/img/plus (1).png" style="width:26px;margin-right:-24px;"></a>
        <a class="btn btn-primary" role="button" href="@Url.Action("EditCourse","Main")" id="Left-Buttons" style="width:185px;height:40px;margin-top:-189px;background-color:#1e2833;">Edit Course<img class="float-left" src="../assets/img/pencil.png" style="width:26px;margin-right:-31px;"></a>
        <a class="btn btn-primary" role="button" href="@Url.Action("ShowCourses","Main")" id="Left-Buttons" style="width:185px;height:40px;margin-top:-90px;background-color:rgb(30,40,51);">Show Courses<img class="float-left" src="../assets/img/menu.png" style="width:26px;margin-right:-7px;"></a>
        <a class="btn btn-primary" role="button" href="@Url.Action("ShowUsers","Main")" id="Left-Buttons" style="width:185px;height:40px;margin-top:-140px;background-color:rgb(30,40,51);margin-left:-10px">Show Users<img class="float-left" src="../assets/img/people.png" style="width:26px;margin-right:-14px;margin-left:10px"></a>

    </div>
    <div class="container" style="margin-left:199px;margin-top:95px;width:543px;" id="USER_LIST">
        @if (!ViewBag.Empty)
        {
            int i = 0; String BT_ID; String NAME;
            for (i = 0; i < ViewBag.COUNTER; i++)
            {
                BT_ID = "BT_ID" + i;
                NAME = "NM_ID" + i;
                <ul class="list-unstyled swing animated">
                    <li class="Course_List" style="color:rgb(0,0,0);">
                        <div>
                            <h5 class="course_name" id="@NAME"><img src="../assets/img/user.png" class="course_img">  @ViewBag.USERNAMES[i]  </h5>
                            <h6 class="course_disc">About This User :</h6>
                            <div>
                                <ul class="course_show_list">
                                    <li>Enrolled in : @ViewBag.COURSESNUM[i] Courses</li>
                                    <li>User-Email : @ViewBag.USEREMAILS[i] </li>
                                </ul>
                                <button class="btn btn-primary" id="@BT_ID" style="width:123px;height:40px;margin-left:360px;margin-top:2px;background-color:black ; font-size:small;border-radius:10px;color:#7cfad4">Show Courses</button>
                            </div>
                        </div>
                    </li>

                </ul>
                <script>

                    $('#@BT_ID').click(function () {

                        $('#USER_LIST').fadeOut();
                        $('#USER_COURSES').show();

                        var Name = $('#@NAME').text();

                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("Course_Details","Main")',
                            data: { Username: Name },
                            datatype: "json",
                            traditional: true,
                            success: function (ARRAY) {

                                if (ARRAY.length != 0) {

                                    var j;
                                    for(j = 0; j < ARRAY.length ; j++) {

                                        document.getElementById("ENROLLED_COURSES").innerHTML = document.getElementById("ENROLLED_COURSES").innerHTML + "<li> Course " + (j + 1) + " : " + ARRAY[j] + " </li>";
                                    }


                                }
                                else {

                                    document.getElementById("USER_COURSES").innerHTML = "<h1> This user dose not enrolled in any Courses ! </h1>"

                                }

                            },
                            error: function () {

                            }

                        });
                    });

                </script>
            }
        }
        else
        {
            <h1>You didn't have any users Yet !</h1>
        }

    </div>
    <div class="container" style="margin-left:199px;margin-top:95px;width:543px;display:none" id="USER_COURSES">

        <ul class="list-unstyled swing animated">
            <li class="Course_List" style="color:rgb(0,0,0);">
                <div>
                    <h5 class="course_disc">Enrolled Courses :</h5>
                    <div>
                        <ul class="course_show_list" id="ENROLLED_COURSES">
                        </ul>
                    </div>
                </div>
            </li>
        </ul>

    </div>
    <script src="../assets/js/jquery.min.js"></script>
    <script src="../assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="../assets/js/bs-animation.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.3.1/js/swiper.jquery.min.js"></script>
    <script src="../assets/js/Simple-Slider.js"></script>


</body>
</html>