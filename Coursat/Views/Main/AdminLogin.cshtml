@model Coursat.Models.WEBSITE_USER
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coursat</title>
    <link rel="stylesheet" href="../assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../assets/fonts/ionicons.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Abel">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Abhaya+Libre">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Actor">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Advent+Pro">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Asap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Baloo+Da">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cairo">
    <link rel="stylesheet" href="../assets/css/Footer-Dark.css">
    <link rel="stylesheet" href="../assets/css/Highlight-Blue.css">
    <link rel="stylesheet" href="../assets/css/Highlight-Clean.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.3.1/css/swiper.min.css">
    <link rel="stylesheet" href="../assets/css/Login-Form-Clean.css">
    <link rel="stylesheet" href="../assets/css/Login-Form-Dark.css">
    <link rel="stylesheet" href="../assets/css/Navigation-Clean.css">
    <link rel="stylesheet" href="../assets/css/Navigation-with-Button.css">
    <link rel="stylesheet" href="../assets/css/Navigation-with-Search.css">
    <link rel="stylesheet" href="../assets/css/Registration-Form-with-Photo-1.css">
    <link rel="stylesheet" href="../assets/css/Registration-Form-with-Photo.css">
    <link rel="stylesheet" href="../assets/css/Simple-Slider.css">
    <link rel="stylesheet" href="../assets/css/styles.css">
    <link rel="stylesheet" href="../assets/css/Team-Clean.css">
</head>

<body>
    <div class="login-dark" style="background-color:#ffffff;">
        @using (Html.BeginForm("AdminDashboard", "Main", FormMethod.Post, new { style = "background-color:#000000;margin:0;margin-left:-451px;", @id = "LOGIN_FORM" }))
        {

            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
            <div class="form-group">@Html.TextBoxFor(TX_EMAIL => TX_EMAIL.Email, new { placeholder = "Email", @class = "form-control" })</div>
            <div class="form-group">@Html.PasswordFor(TX_PASS => TX_PASS.Password, new { placeholder = "Password", @class = "form-control" })</div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" onclick="location.href='@Url.Action("AdminDashboard","Main")'" type="submit" data-bs-hover-animate="pulse" id="BT_IN_LOGIN" style="background-color:#405fd1;">Log In</button>
                <h1 class="float-left" id="COURSAT" style="margin-left:-53px;color:#405fd1;margin-top:-526px;width:413px;font-size:44px;">
                    Login To &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                    <strong>Admin Dashboard</strong><br><br>
                </h1>
            </div>
            <div class="lds-ellipsis" id="show" style="margin-left:80px ; display:none"><div></div><div></div><div></div><div></div></div>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
            <script>
                $('#BT_IN_LOGIN').click(function () { $('#show').show(); })
            </script>

            //get the value from the MainController

            if (ViewBag.isRightAdmin == false)
            {
                <h6 style="text-align:center ; font-size:15px ; color:red ">Email or password is Incorrect</h6>

            }
            else if(ViewBag.EmptyAdmin == true)
            {
                <h6 style="text-align:center ; font-size:15px ; color:red ">Fill the above to Login</h6>
            }

        }
        <img src="../assets/img/undraw_sign_in_e6hj (2).png" style="width:931px;margin-top:173px;margin-left:495px;">
    </div>
    <nav class="navbar navbar-light navbar-expand-md fixed-top" style="color:rgb(110,131,152);background-color:#000000;">
        <div class="container-fluid">
            <a class="navbar-brand text-monospace" href="#" id="COURSAT" style="font-size:25px;font-family:Actor, sans-serif;color:#6495ed;margin-left:0px;">Coursat</a><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1" style="background-color:#ffffff;"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item" role="presentation"><a class="nav-link active" href="#" style="color:rgba(255,255,255,0.93);font-family:Actor, sans-serif;"></a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="#" style="color:rgba(255,255,255,0.83);"></a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="#" style="color:rgba(255,255,255,0.84);"></a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="footer-dark" style="background-color:#000000;background-repeat:no-repeat;">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-3 item">
                        <h3 id="FOOTER" style="color:rgb(64,95,209);">Services</h3>
                        <ul>
                            <li><a href="#">Booking</a></li>
                            <li><a href="#">Search</a></li>
                            <li><a href="#"></a></li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-md-3 item">
                        <h3 id="FOOTER" style="color:rgb(64,95,209);">About</h3>
                        <ul>
                            <li><a href="#">Company</a></li>
                            <li><a href="#">Team</a></li>
                            <li><a href="#">Careers</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 item text">
                        <h3 id="FOOTER" style="color:rgb(64,95,209);">Coursat</h3>
                        <p></p>
                    </div>
                </div>
                <p class="copyright">Coursat © 2020</p>
            </div>
        </footer>
    </div>
    <script src="../assets/js/jquery.min.js"></script>
    <script src="../assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="../assets/js/bs-animation.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.3.1/js/swiper.jquery.min.js"></script>
    <script src="../assets/js/Simple-Slider.js"></script>


</body>
</html>